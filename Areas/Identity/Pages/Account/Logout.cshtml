@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logout - TailorNow</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- Simple Header -->
    <nav class="navbar navbar-light bg-white py-3 shadow-sm">
        <div class="container justify-content-center">
            <a class="navbar-brand m-0 fs-3 fw-bold" href="/">
                <i class="bi bi-scissors text-primary"></i> TailorNow
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container d-flex flex-grow-1 justify-content-center align-items-center py-5">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="width: 100%; max-width: 420px;">
            <div class="card-body p-5 text-center">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <!-- Logout Confirmation -->
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                        <i class="bi bi-box-arrow-right text-warning fs-2"></i>
                    </div>
                    <h3 class="fw-bold mb-2">Logout Confirmation</h3>
                    <p class="text-muted mb-4">
                        Are you sure you want to log out of your account?
                    </p>
                    
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-primary w-100 py-2 mb-2">
                            <i class="bi bi-box-arrow-right me-2"></i>Yes, Logout
                        </button>
                        <a href="/Customer/Dashboard" class="btn btn-outline-primary w-100 py-2">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                    </form>
                }
                else
                {
                    <!-- Logged Out Success -->
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                        <i class="bi bi-check-circle text-success fs-2"></i>
                    </div>
                    <h3 class="fw-bold mb-2">Logged Out Successfully</h3>
                    <p class="text-muted mb-4">
                        You have been successfully logged out. Thank you for using TailorNow!
                    </p>
                    
                    <a href="/" class="btn btn-primary w-100 py-2 mb-2">
                        <i class="bi bi-house me-2"></i>Go to Home
                    </a>
                    <a href="/Identity/Account/Login" class="btn btn-outline-primary w-100 py-2">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login Again
                    </a>
                }
            </div>
        </div>
    </div>

</body>
</html>

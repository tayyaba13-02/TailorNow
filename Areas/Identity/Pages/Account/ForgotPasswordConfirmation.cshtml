@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Sent - TailorNow</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- Simple Header -->
    <nav class="navbar navbar-light bg-white py-3 shadow-sm">
        <div class="container justify-content-center">
            <a class="navbar-brand m-0 fs-3 fw-bold" href="/">
                <i class="bi bi-scissors text-primary"></i> TailorNow
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container d-flex flex-grow-1 justify-content-center align-items-center py-5">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="width: 100%; max-width: 420px;">
            <div class="card-body p-5 text-center">
                <div class="bg-success bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                    <i class="bi bi-send text-success fs-2"></i>
                </div>
                <h3 class="fw-bold mb-2">Check Your Email</h3>
                <p class="text-muted mb-4">
                    Please check your email to reset your password. If an account exists with that email, we've sent a link.
                </p>
                
                <a asp-page="./Login" class="btn btn-outline-primary w-100 py-2">Back to Login</a>
            </div>
        </div>
    </div>

</body>
</html>

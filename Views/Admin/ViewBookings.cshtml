@model IEnumerable<TailorrNow.Models.Booking>
@{
    ViewBag.Title = "View All Bookings - TailorNow Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-0">
    
    <!-- Hero Header -->
    <div class="bg-primary text-white py-4 shadow-sm mb-4">
        <div class="container text-center">
            <h2 class="fw-bold mb-1"><i class="bi bi-calendar-check me-2"></i>View All Bookings</h2>
            <p class="mb-0 opacity-75">Overview of all customer tailoring appointments across the platform</p>
        </div>
    </div>

    <div class="container py-2">
        <!-- Filter Card -->
        <div class="card border-0 shadow-sm rounded-4 mb-4 reveal active">
            <div class="card-body p-4">
                <h5 class="fw-bold text-primary mb-4"><i class="bi bi-funnel me-2"></i>Filter Bookings</h5>
                <form method="get" action="/Admin/ViewBookings">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">Customer Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-person text-primary"></i></span>
                                <input type="text" name="customerName" class="form-control bg-light border-start-0 ps-0" placeholder="Search by name" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">Status</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-check-circle text-primary"></i></span>
                                <select name="status" class="form-select bg-light border-start-0 ps-0">
                                    <option value="all" selected="@(ViewBag.StatusFilter == "all")">All Statuses</option>
                                    <option value="Pending" selected="@(ViewBag.StatusFilter == "Pending")">Pending</option>
                                    <option value="Confirmed" selected="@(ViewBag.StatusFilter == "Confirmed")">Confirmed</option>
                                    <option value="Completed" selected="@(ViewBag.StatusFilter == "Completed")">Completed</option>
                                    <option value="Cancelled" selected="@(ViewBag.StatusFilter == "Cancelled")">Cancelled</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">Start Date</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar text-primary"></i></span>
                                <input type="date" name="startDate" class="form-control bg-light border-start-0 ps-0" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-muted text-uppercase">End Date</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar text-primary"></i></span>
                                <input type="date" name="endDate" class="form-control bg-light border-start-0 ps-0" />
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                            <i class="bi bi-search me-1"></i> Apply Filters
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Bookings Table -->
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden reveal">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3 text-uppercase small fw-bold text-muted">#</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Customer</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Service</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Booking Date</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Status</th>
                                
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            @if (Model != null && Model.Any())
                            {
                                int count = 1;
                                foreach (var booking in Model)
                                {
                                    <tr>
                                        <td class="ps-4">@count++</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-primary-light text-primary me-2">
                                                    @GetInitials(booking.Customer?.FullName ?? "Customer")
                                                </div>
                                                <span class="fw-bold">@(booking.Customer?.FullName ?? "Customer")</span>
                                            </div>
                                        </td>
                                        <td><span class="text-dark">@(booking.Service?.ServiceName ?? "Service")</span></td>
                                        <td><span class="text-muted"><i class="bi bi-clock me-1"></i>@booking.BookingDate.ToString("MMM dd, yyyy")</span></td>
                                        <td><span class="badge @GetStatusBadgeClass(booking.Status) border-0 px-3 py-2 rounded-pill small fw-bold">@booking.Status</span></td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-5 text-muted">No bookings found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-3 text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        <li class="page-item disabled"><a class="page-link border-0 rounded-pill mx-1" href="#"><i class="bi bi-chevron-left"></i></a></li>
                        <li class="page-item active"><a class="page-link border-0 rounded-pill mx-1" href="#">1</a></li>
                        <li class="page-item"><a class="page-link border-0 rounded-pill mx-1" href="#"><i class="bi bi-chevron-right"></i></a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "bg-warning-light text-warning",
            "confirmed" => "bg-success-light text-success",
            "completed" => "bg-primary-light text-primary",
            "cancelled" => "bg-danger-light text-danger",
            _ => "bg-secondary-light text-secondary"
        };
    }

    string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "U";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0) return "U";
        if (parts.Length == 1) return parts[0][0].ToString().ToUpper();
        return (parts[0][0].ToString() + parts[parts.Length - 1][0].ToString()).ToUpper();
    }
}

@section Scripts {
    <script>
        function reveal() {
            var reveals = document.querySelectorAll(".reveal");
            for (var i = 0; i < reveals.length; i++) {
                var windowHeight = window.innerHeight;
                var elementTop = reveals[i].getBoundingClientRect().top;
                if (elementTop < windowHeight - 100) {
                    reveals[i].classList.add("active");
                }
            }
        }
        window.addEventListener("scroll", reveal);
        reveal();
    </script>
}

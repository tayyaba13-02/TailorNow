@model TailorrNow.Models.ViewModels.UpdateTailorProfileViewModel
@{
    ViewBag.Title = "Update Profile - TailorNow";
    Layout = "~/Views/Shared/_LayoutTailor.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden reveal">
                <div class="card-header bg-primary text-white py-4 text-center border-0">
                    <div class="icon-box bg-white text-primary mb-3 mx-auto">
                        <i class="bi bi-person-gear fs-2"></i>
                    </div>
                    <h2 class="fw-bold mb-1">Tailor Profile</h2>
                    <p class="mb-0 opacity-75">Update your shop details and contact information</p>
                </div>
                
                <div class="card-body p-4 p-lg-5">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show rounded-3 mb-4" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="UpdateProfile" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="FullName" class="form-label fw-semibold text-dark">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-person text-primary"></i></span>
                                    <input asp-for="FullName" class="form-control bg-light border-start-0 ps-0" placeholder="Your full name" />
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Email" class="form-label fw-semibold text-dark">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope text-primary"></i></span>
                                    <input asp-for="Email" class="form-control bg-light border-start-0 ps-0" readonly />
                                </div>
                                <p class="text-muted small mt-1"><i class="bi bi-info-circle me-1"></i>Email cannot be changed</p>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="ShopName" class="form-label fw-semibold text-dark">Shop Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-shop text-primary"></i></span>
                                    <input asp-for="ShopName" class="form-control bg-light border-start-0 ps-0" placeholder="e.g. Royal Stitches" />
                                </div>
                                <span asp-validation-for="ShopName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="ContactNumber" class="form-label fw-semibold text-dark">Contact Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-telephone text-primary"></i></span>
                                    <input asp-for="ContactNumber" class="form-control bg-light border-start-0 ps-0" placeholder="Your phone number" />
                                </div>
                                <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mb-4">
                                <label asp-for="City" class="form-label fw-semibold text-dark">City</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-geo-alt text-primary"></i></span>
                                    <input asp-for="City" class="form-control bg-light border-start-0 ps-0" placeholder="e.g. New York" />
                                </div>
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mt-4 pt-2">
                            <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold text-uppercase ls-wide shadow">
                                <i class="bi bi-save me-2"></i> Save Profile Changes
                            </button>
                            <a asp-action="TailorDashboard" class="btn btn-link w-100 mt-3 text-muted text-decoration-none fw-medium">
                                <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Scroll reveal animation
        const revealElement = document.querySelector('.reveal');
        setTimeout(() => {
            revealElement.classList.add('active');
        }, 100);
    </script>
}

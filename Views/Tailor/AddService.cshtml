@model TailorrNow.Models.ViewModels.ServiceViewModel
@{
    ViewBag.Title = "Add New Service - TailorNow";
    Layout = "~/Views/Shared/_LayoutTailor.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="icon-box bg-primary bg-opacity-10 text-primary mx-auto mb-3">
                            <i class="bi bi-scissors fs-3"></i>
                        </div>
                        <h3 class="fw-bold mb-1">Add New Service</h3>
                        <p class="text-muted small">Expand your tailoring service offerings</p>
                    </div>

                    <form asp-action="AddService">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ServiceName" class="form-label small fw-semibold text-secondary">Service Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-scissors text-muted"></i>
                                </span>
                                <input asp-for="ServiceName" class="form-control bg-light border-start-0" placeholder="e.g., Blouse Stitching" required>
                            </div>
                            <span asp-validation-for="ServiceName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Price" class="form-label small fw-semibold text-secondary">Price (₹)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">₹</span>
                                <input asp-for="Price" class="form-control bg-light border-start-0" placeholder="500" required>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary py-2">
                                <i class="bi bi-check-circle me-1"></i> Save Service
                            </button>
                            <a href="/Tailor/ManageServices" class="btn btn-outline-primary py-2">
                                <i class="bi bi-arrow-left me-1"></i> Back to Services
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
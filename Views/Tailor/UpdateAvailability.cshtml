@model TailorrNow.Models.ViewModels.UpdateAvailabilityViewModel
@{
    ViewBag.Title = "Update Availability - TailorNow";
    Layout = "~/Views/Shared/_LayoutTailor.cshtml";
}

<div class="container-fluid py-4">
    
    <div class="bg-primary text-white rounded-3 p-4 mb-4 shadow">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1"><i class="bi bi-calendar-check me-2"></i>Update Availability</h2>
                <p class="mb-0">Set your working hours and available time slots</p>
            </div>
        </div>
    </div>

  
    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-clock me-2"></i>Set New Availability</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateAvailability" method="post" id="availabilityForm">
                        @Html.AntiForgeryToken()

                       
                        <div class="mb-4">
                            <label asp-for="AvailableDate" class="form-label fw-medium">Date</label>
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white"><i class="bi bi-calendar"></i></span>
                                <input asp-for="AvailableDate" type="date" class="form-control" required>
                            </div>
                            <span asp-validation-for="AvailableDate" class="text-danger small"></span>
                        </div>

                      
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FromTime" class="form-label fw-medium">From</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="bi bi-clock"></i></span>
                                    <input asp-for="FromTime" type="time" class="form-control" required>
                                </div>
                                <span asp-validation-for="FromTime" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ToTime" class="form-label fw-medium">To</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="bi bi-clock"></i></span>
                                    <input asp-for="ToTime" type="time" class="form-control" required>
                                </div>
                                <span asp-validation-for="ToTime" class="text-danger small"></span>
                            </div>
                        </div>

                     
                        <div class="mb-4">
                            <label asp-for="RepeatOption" class="form-label fw-medium">Repeat</label>
                            <select asp-for="RepeatOption" class="form-select">
                                <option value="none">Does not repeat</option>
                                <option value="daily">Daily</option>
                                <option value="weekly">Weekly (Same days)</option>
                                <option value="weekdays">Weekdays (Mon-Fri)</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle me-1"></i> Save Availability
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

       
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-list-check me-2"></i>Current Availability</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="availabilityTable">
                            <thead class="bg-purple-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Time Slot</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Availabilities != null)
                                {
                                    foreach (var item in ViewBag.Availabilities)
                                    {
                                        <tr data-id="@item.Id">
                                            <td>@item.Date</td>
                                            <td>@item.Time</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger remove-availability">
                                                    Remove
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set default date to today if not provided
            const dateInput = document.getElementById('AvailableDate');
            if (!dateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }
// ... rest of scripts

            
            document.querySelector('#availabilityTable').addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-availability')) {
                    const row = e.target.closest('tr');
                    const availabilityId = row.getAttribute('data-id');

                    if (confirm('Are you sure you want to remove this availability?')) {
                        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                        fetch('/Tailor/RemoveAvailability?id=' + availabilityId, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': token
                            }
                        })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(data => {
                            if (data.success) {
                                row.remove();
                                showToast('Availability removed successfully!', 'success');
                            } else {
                                showToast('Failed to remove availability', 'danger');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            showToast('An error occurred while removing availability', 'danger');
                        });
                    }
                }
            });

           
            document.getElementById('availabilityForm').addEventListener('submit', function(e) {
                const fromTime = document.getElementById('FromTime').value;
                const toTime = document.getElementById('ToTime').value;

                
                if (fromTime >= toTime) {
                    e.preventDefault();
                    showToast('End time must be after start time', 'danger');
                    return false;
                }
                return true;
            });

            function showToast(message, type) {
               
                alert(message);
            }
        });
    </script>
}
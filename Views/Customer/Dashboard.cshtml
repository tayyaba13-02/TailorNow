@model TailorrNow.Models.ViewModels.CustomerDashboardViewModel
@{
    ViewBag.Title = "Customer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section section-padding bg-gradient-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3">
                    Welcome Back@(Model.Customer != null ? ", " + Model.Customer.FullName : "")!
                </h1>
                <p class="lead mb-4">
                    Premium tailoring services at your fingertips. Book expert tailors, manage appointments,
                    and transform your wardrobe with ease.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="/Customer/BookTailor" class="btn btn-light btn-lg px-4">
                        <i class="bi bi-calendar-plus me-2"></i>Book Now
                    </a>
                    <a href="/Customer/MyBookings" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-list-check me-2"></i>My Bookings
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section class="section-padding bg-light">
    <div class="container">
        <div class="section-title text-center mb-5">
            <h2 class="fw-bold text-dark">How It Works</h2>
            <p class="text-muted">Three simple steps to perfect tailoring</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4 reveal">
                <div class="text-center">
                    <div class="icon-box bg-primary text-white mb-3 mx-auto">
                        <i class="bi bi-search fs-3"></i>
                    </div>
                    <h3 class="h5 mb-2 text-dark">Find Your Tailor</h3>
                    <p class="text-muted">Browse our verified tailors by specialty</p>
                </div>
            </div>
            <div class="col-md-4 reveal">
                <div class="text-center">
                    <div class="icon-box bg-primary text-white mb-3 mx-auto">
                        <i class="bi bi-calendar-check fs-3"></i>
                    </div>
                    <h3 class="h5 mb-2 text-dark">Book Appointment</h3>
                    <p class="text-muted">Schedule at your convenience</p>
                </div>
            </div>
            <div class="col-md-4 reveal">
                <div class="text-center">
                    <div class="icon-box bg-primary text-white mb-3 mx-auto">
                        <i class="bi bi-scissors fs-3"></i>
                    </div>
                    <h3 class="h5 mb-2 text-dark">Get Perfect Fit</h3>
                    <p class="text-muted">Professional alterations delivered</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Access Cards -->
<section class="section-padding">
    <div class="container">
        <div class="row g-4">
            <!-- Recommended Tailors -->
            <div class="col-md-6 reveal">
                <div class="feature-card h-100">
                    <h3 class="h5 text-primary mb-4">
                        <i class="bi bi-star me-2"></i>Recommended Tailors
                    </h3>
                    
                    @if (Model.RecommendedTailors != null && Model.RecommendedTailors.Any())
                    {
                        @foreach (var tailor in Model.RecommendedTailors.Take(3))
                        {
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <div class="avatar-circle bg-primary text-white me-3">
                                    @tailor.ShopName.Substring(0, 1)
                                </div>
                                <div class="flex-grow-1">
                                    <h4 class="h6 mb-1">@tailor.ShopName</h4>
                                    <p class="small text-muted mb-1">@tailor.City</p>
                                    @if (tailor.Services != null && tailor.Services.Any())
                                    {
                                        <span class="badge bg-light text-primary border border-primary">
                                            @tailor.Services.First().ServiceName
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                        <a href="/Customer/BookTailor" class="btn btn-primary btn-sm mt-2">
                            <i class="bi bi-arrow-right me-1"></i>Browse All Tailors
                        </a>
                    }
                    else
                    {
                        <p class="text-muted">No tailors available at the moment.</p>
                        <a href="/Customer/BookTailor" class="btn btn-outline-primary btn-sm">Explore Tailors</a>
                    }
                </div>
            </div>

            <!-- Recent Bookings -->
            <div class="col-md-6 reveal">
                <div class="feature-card h-100">
                    <h3 class="h5 text-primary mb-4">
                        <i class="bi bi-clock-history me-2"></i>Recent Bookings
                    </h3>
                    
                    @if (Model.RecentBookings != null && Model.RecentBookings.Any())
                    {
                        @foreach (var booking in Model.RecentBookings)
                        {
                            <div class="d-flex align-items-start mb-3 pb-3 border-bottom">
                                <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-3">
                                    <i class="bi bi-scissors"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h4 class="h6 mb-1">@booking.Service?.ServiceName</h4>
                                    <p class="small text-muted mb-2">
                                        <i class="bi bi-shop me-1"></i>@booking.Tailor?.ShopName
                                    </p>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge @GetStatusBadgeClass(booking.Status)">
                                            @booking.Status
                                        </span>
                                        <span class="small text-muted">
                                            @booking.BookingDate.ToString("MMM dd, yyyy")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                        <a href="/Customer/MyBookings" class="btn btn-outline-primary btn-sm mt-2">
                            <i class="bi bi-arrow-right me-1"></i>View All Bookings
                        </a>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-x text-muted fs-1 mb-3"></i>
                            <p class="text-muted mb-3">You don't have any bookings yet.</p>
                            <a href="/Customer/BookTailor" class="btn btn-primary btn-sm">Book Your First Appointment</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "bg-warning text-dark",
            "confirmed" => "bg-success",
            "completed" => "bg-primary",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        // Scroll reveal animation
        const revealElements = document.querySelectorAll('.reveal');
        const revealOnScroll = () => {
            revealElements.forEach(el => {
                const elementTop = el.getBoundingClientRect().top;
                const elementVisible = 150;
                if (elementTop < window.innerHeight - elementVisible) {
                    el.classList.add('active');
                }
            });
        };
        window.addEventListener('scroll', revealOnScroll);
        revealOnScroll(); // Initial check
    </script>
}
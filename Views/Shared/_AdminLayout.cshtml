<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TailorNow Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-white">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow py-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-5" href="/Admin/AdminDashboard">
                    <i class="bi bi-scissors text-primary"></i>
                    <span class="text-primary">TailorNow Admin</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav me-auto ps-lg-4">
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-medium" href="/Admin/AdminDashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-medium" href="/Admin/ManageUsers">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-medium" href="/Admin/ViewBookings">Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-medium" href="/Admin/CommissionReports">Reports</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary fw-bold" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3">
                                <li><a class="dropdown-item" href="/Admin/Profile"><i class="bi bi-person me-2 text-primary"></i>Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout"><i class="bi bi-box-arrow-right me-2 text-danger"></i>Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary py-4 mt-5">
        <div class="container text-center">
            <span class="text-white">&copy; 2025 - TailorNow Admin</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>